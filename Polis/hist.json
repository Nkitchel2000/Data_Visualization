{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A histogram of film ratings, modified to include null values.",
  "width": 600,
  "height": 600,
  "autosize": {"type": "fit", "resize": true},

  "signals": [
    {
      "name": "binCount",
      "update": "(bins.stop - bins.start) / bins.step"
    },
    {
      "name": "nullGap", "value": 1
    },
    {
      "name": "barStep",
      "update": "(width - nullGap) / (1 + binCount)"
    },
    {
      "name": "Type",
      "value": "Region #",
      "bind": {
        "input": "select",
        "options": ["Bronze",
          "Colonies",
          "Delian L",
          "Democracy",
          "Elevation m",
          "Grid",
          "Hellenicity",
          "In/out",
          "Koinon",
          "Polisity",
          "Proxenoi",
          "Region #",
          "Silver",
          "Victors",
          "Walls",
          "area 1",
          "area 2",
          "polis#",
          "prom 1",
          "prom 2",
          "prom 3",
          "staseis"
        ]
      }
    }
  ],

  "data": [
    {
      "name": "table",
      "url": "data/polis_filtered_data.json",
      "transform": [
        {
          "type": "extent", "field": {"signal": "Type"},
          "signal": "extent"
        },
        {
          "type": "bin", "signal": "bins",
          "field": {"signal": "Type"}, "extent": {"signal": "extent"}
        }
      ]
    },
    {
      "name": "counts",
      "source": "table",
      "transform": [
        {
          "type": "filter",
          "expr": "datum[Type] > 0"
        },
        {
          "type": "aggregate",
          "groupby": ["bin0", "bin1"]
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "round": true, "nice": true,
      "domain": {
        "fields": [
          {"data": "counts", "field": "count"}
        ]
      }
    },
    {
      "name": "x",
      "type": "linear",
      "range": [{"signal": "barStep + nullGap"}, {"signal": "width"}],
      "round": true,
      "domain": {"signal": "[bins.start, bins.stop]"},
      "bins": {"signal": "bins"}
    }
  ],

  "axes": [
    {
      "scale": "x",
      "datum.properties[Type]": true,
      "domain": false,
      "orient": "bottom",
      "titlePadding": 12,
      "labelFontSize": 16,
      "titleFontSize": 28,
      "titleFontStyle": "normal",
      "titleFontWeight": "lighter",
      "title": "Liters of Pure Alcohol",
      "titleOpacity": 0.6
    },
    {
      "scale": "y",
      "datum.properties[Type]": true,
      "domain": false,
      "orient": "left",
      "tickCount": 8,
      "titlePadding": 12,
      "labelFontSize": 16,
      "titleFontSize": 28,
      "titleFontStyle": "normal",
      "titleFontWeight": "lighter",
      "titleOpacity": 0.6,
      "title": "Number of Countries"
    }
  ],

  "marks": [
    {
      "type": "rect",
      "from": {"data": "counts"},
      "encode": {
        "update": {
          "x": {"scale": "x", "field": "bin0", "offset": 1},
          "x2": {"scale": "x", "field": "bin1"},
          "y": {"scale": "y", "field": "count"},
          "y2": {"scale": "y", "value": 1},
          "fill": {"value": "coral"}
        },
        "hover": {
          "fill": {"value": "darkturquoise"}
        }
      }
    }
  ]
}
