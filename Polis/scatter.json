{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A basic scatter plot example depicting automobile statistics.",
  "width": 400,
  "height": 400,

  "signals": [
    {
      "name": "X_axis",
      "value": "Elevation m",
      "bind": {
        "input": "select",
        "options": ["Bronze",
          "Colonies",
          "Delian L",
          "Democracy",
          "Elevation m",
          "Grid",
          "Hellenicity",
          "In/out",
          "Koinon",
          "Polisity",
          "Proxenoi",
          "Region #",
          "Silver",
          "Victors",
          "Walls",
          "area 1",
          "area 2",
          "polis#",
          "prom 1",
          "prom 2",
          "prom 3",
          "staseis"
        ]
      }
    },
    {
      "name": "Y_axis",
      "value": "staseis",
      "bind": {
        "input": "select",
        "options": ["Bronze",
          "Colonies",
          "Delian L",
          "Democracy",
          "Elevation m",
          "Grid",
          "Hellenicity",
          "In/out",
          "Koinon",
          "Polisity",
          "Proxenoi",
          "Region #",
          "Silver",
          "Victors",
          "Walls",
          "area 1",
          "area 2",
          "polis#",
          "prom 1",
          "prom 2",
          "prom 3",
          "staseis"
        ]
      }
    }
  ],

  "data": [
    {
      "name": "source",
      "url": "data/polis_filtered_data.json",
      "transform": [
        {
          "type": "filter",
          "expr": "datum[X_axis] != null && datum[Y_axis] != null"
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "x",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": {"data": "source", "field": {"signal": "X_axis"}},
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": {"data": "source", "field": {"signal": "Y_axis"}},
      "range": "height"
    }
  ],

  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "tickCount": 5,
      "titlePadding": 12,
      "labelFontSize": 16,
      "titleFontSize": 28,
      "titleFontStyle": "normal",
      "titleFontWeight": "lighter",
      "title": {"signal": "X_axis"},
      "titleOpacity": 0.6
    },
    {
      "scale": "y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "titlePadding": 12,
      "labelFontSize": 16,
      "titleFontSize": 28,
      "titleFontStyle": "normal",
      "titleFontWeight": "lighter",
      "titleOpacity": 0.6,
      "title": {"signal": "Y_axis"}
    }
  ],

  "marks": [
    {
      "name": "marks",
      "type": "symbol",
      "from": {"data": "source"},
      "encode": {
        "update": {
          "x": {"scale": "x", "field": {"signal": "X_axis"}},
          "y": {"scale": "y", "field": {"signal": "Y_axis"}},
          "shape": {"value": "square"},
          "fill": {"value": "#377eb8"}
        }
      }
    }
  ]
}