{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A contour plot of a mathematical function.",
  "width": 600,

  "signals": [
    {
      "name": "grid",
      "init": "data('math')[0]"
    },
    {
      "name": "height",
      "update": "round(grid.height * width / grid.width)"
    },
    {
      "name": "Smooth: ", "value": true,
      "bind": {"input": "radio", "options": [true, false]}
    },
    {
      "name": "Levels", "value": 10,
      "bind": {"input": "range", "min": 4, "max": 12, "step": 1}
    },
    {
      "name": "stop", "value": 2
    },
    {
      "name": "step",
      "update": "stop / Levels"
    }
  ],

  "data": [
    {
      "name": "math",
      "url": "math.json"
    },
    {
      "name": "contours",
      "source": "math",
      "transform": [
        {
          "type": "isocontour",
          "scale": {"expr": "width / datum.width"},
          "smooth": {"signal": "Smooth: "},
          "thresholds": {"signal": "sequence(-4, stop, step)"}
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "color",
      "type": "linear",
      "domain": {"signal": "[-2, stop]"},
      "range": {"scheme": "purplegreen", "count": {"signal": "Levels"}}
    }
  ],
  "marks": [
    {
      "type": "path",
      "from": {"data": "contours"},
      "encode": {
        "enter": {
          "stroke": {"value": "lightgrey"},
          "strokeWidth": {"value": 1},
          "fill": {"scale": "color", "field": "contour.value"}
        }
      },
      "transform": [
        {
          "type": "geopath",
          "field": "datum.contour"
        }
      ]
    }
  ]
}